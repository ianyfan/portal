for ((  line_no=0; line_no<${#credits[@]}; line_no++ )); do
    line=${credits[$line_no]}
    credits_time=$(date +%s%N)
    for (( char=0; char<${#line}; char++ )); do
        (( cursor_pos_credits++ ))
        sed -i "3s/[0-9]*$/$cursor_pos_credits/" $temp_file
        printf "\033[17;$(( cursor_pos_credits-1 ))H${line:$char:1}"
        print_cursors

        if ((  credits_time + 65000000 > $(date +%s%N) )); then
            sleep $(bc <<< "scale=3; .065+($credits_time-$(date +%s%N))/10^9" )
        fi
        credits_time=$(date +%s%N)
    done
    sed -i "3s/[0-9]*$/57/" $temp_file
    for (( l=line_no; l>line_no-15 && l>=0; l-- )); do
        line=${credits[$l]}
        printf "\033[%s;57H$line$(printf ' %.0s' $(seq ${#line} 50))" \
            $(( 16+$l-$line_no ))
    done
    printf '\033[17;57H                                                 '
    print_cursors
done &

